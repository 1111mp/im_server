    "koa2-swagger-ui": "^5.7.0",
    "lodash": "^4.17.21",
    "mariadb": "^3.0.2",
    "nodemon": "^2.0.20",
    "protobufjs": "~7.1.2",
    "pug": "^3.0.2",
    "redlock": "^4.2.0",
    "sequelize": "^6.28.0",
    "socket.io": "^4.5.4",
