{
  "appenders": {
    "console": {
      "type": "console"
    },
    "logs": {
      "type": "dateFile",
      "filename": "logs/log",
      "maxLogSize": 10485760,
      "encoding": "utf-8",
      "pattern": "yyyy-MM-dd-hh.log",
      "alwaysIncludePattern": true,
      "numBackups": 3,
      "layout": {
        "type": "pattern",
        "pattern": "[%d{yyyy-MM-dd hh:mm:ss}] [%p] [%c] %m%n"
      }
    }
  },
  "categories": {
    "default": { "appenders": ["console", "logs"], "level": "TRACE" },
    "IM_Server": { "appenders": ["console", "logs"], "level": "DEBUG" }
  }
}
